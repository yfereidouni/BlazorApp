@page "/converter"

<h3>Converter</h3>

<label>KG</label>
@*<input type="number" @bind="@Kilos" />*@
@*<input type="number" @bind="@Grams" />*@
<input type="number" @bind-value="@Kilos" @bind-value:event="oninput" />
<input type="number" @bind-value="@Grams" @bind-value:event="oninput" />
<label>g</label>

@code {
    private double kilos = 1;
    private double grams = 1000;

    public double Kilos
    {
        get => kilos;
        set
        {
            kilos = value;
            grams = value * 1000;
        }
    }
    public double Grams
    {
        get => grams;
        set
        {
            grams = value;
            kilos = value / 1000;
        }
    }
}